@model AdminLogin
@{
    ViewData["Title"] = "AdminLogin";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
    <link rel="stylesheet" href="~/css/Admin/AdminLogin.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
    <div class="container-fluid">
        <div class="row">

            <!-- left -->
            <div class="col-lg-6 col-md-6 col-sm-12 left">
                <img class="w-100 vh-100" src="~/images/11116016_415.jpg" alt="banner">
            </div>
            <!-- right  -->
            <div class="col-lg-6 col-md-6 col-sm-12 right">
                <img onclick="darkMode()" class="d-mode" src="~/images/darkmode.png" alt="dark">
                <form class="login" method="post">
                    <img id="logo" src="~/images/logo.png" alt="logo">
                    <div class="mt-3">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-info">
                            <span style="color: #10bce9;">&lt; Back</span>
                        </a>
                    </div>
                    <h3>Login to your account</h3>
                    <div class="input-div form-floating mb-3">
                        <input asp-for="Email" type="text" class="form-control" id="floatingInput" placeholder="name@example.com">

                        <label for="floatingInput">Email</label>

                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <div class="input-div form-floating">
                        <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">

                        <label for="floatingPassword">Password</label>

                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <button>Log In</button>

                    <a asp-controller="Admin" asp-action="CreateAdminAccount">Create New Account</a>
                    <a>Forget Password?</a>
                </form>
                <footer>Terms of Conditions | Privacy Policy</footer>
            </div>
        </div>
    </div>


    <!-- script  -->
    <script>
        function darkMode() {
            var element = document.body;
            element.classList.toggle("dark-mode");

            var img = element.querySelector(".d-mode");
            img.src.includes("darkmode") ? img.src = "../../images/lightmode.png" : img.src = "../../images/darkmode.png";
        }
    </script>
</body>

</html>