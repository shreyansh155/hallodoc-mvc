@{
    Layout = "_AdminDashboardLayout";
    ViewData["Title"] = "AdminProfile";
}
@model AdminProfile;
@* <link rel="stylesheet" href="~/css/Admin/AdminDashboard.css" asp-append-version="true" /> *@

<div class="">
    <div class="container-fluid d-flex justify-content-between mt-4" style="max-width:1000px">
        <h4>
            My Profile
        </h4>
        <a href="@Url.Action("AdminDashboard", "Admin")" class="btn btn-outline-info m-2 text-decoration-none float-end"
           id="back-btn">
            Back
        </a>
    </div>
    <div class="container-fluid justify-content-center mt-4" style="max-width:1000px">
        <div class="viewCaseForm form-floating shadow patient-request-form p-3">
            <form method="post" asp-controller="Admin" asp-action="AdminProfile">
                <input value="1" asp-for="FormId" hidden/>
                <input id="adminId" asp-for="AdminId" hidden />
                <h5>Account Information</h5>
                <div class="row g-2 m-1">
                    <div class="col-md">
                        <div class="form-floating">
                            <input asp-for="UserName" type="text" class="form-control" id="userName">
                            <label for="">User Name</label>
                        </div>
                    </div>

                    <div class="col-md">
                        <div class="form-floating">
                            <input asp-for="AdminPassword" type="password" class="form-control " id="password">
                            <label for="floatingSelectGrid">Password</label>
                        </div>
                    </div>
                </div>

                <div class="row g-2 m-1">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <select asp-for="Status" class="form-select mb-3" id="status">
                                <option>Active</option>
                                <option>Out</option>
                                <option>Died</option>
                            </select>
                            <label for="">Status</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating phone-div w-100 h-100 ">
                            <select asp-for="Role" class="form-select mb-3" id="role">
                                <option>Active</option>
                                <option>Out</option>
                                <option>Died</option>
                            </select>
                            <label for="">Role</label>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-outline-info float-end m-1">Reset Password</button><br />
            </form>


            <form method="post" asp-controller="Admin" asp-action="AdminProfile"  >
                <input value="2" asp-for="FormId" hidden />
                <input id="adminId" asp-for="AdminId" hidden />

                <h5>Administration Information</h5>
                <fieldset id="fieldset1" disabled>

                    <div class="row g-2 m-1">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="FirstName" type="text" class="form-control">
                                <label for="">First Name</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="LastName" type="text" class="form-control">
                                <label for="floatingSelectGrid">Last Name</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Email" type="email" class="form-control">
                                <label for="">Email</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="ConfirmEmail" type="email" class="form-control">
                                <label for="">Confirm Email</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating phone-div w-100 h-100 ">
                                <input asp-for="AdminPhone" type="tel" class="patientPhone form-control w-100 h-100">
                                <label for="">Phone</label>
                            </div>
                        </div>
                        <div class="col-md-6 d-flex justify-content-start flex-wrap mt-4">
                            @foreach (Region region in Model.RegionList)
                            {
                                if (Model.AdminRegion.Contains(region.Regionid))
                                {
                                    <div class="form-floating mt-1 me-3 checkColor ">
                                        <input checked class="changeable check form-check-input" value="@region.Regionid" type="checkbox" style="" disabled />
                                        <span>@region.Name</span>
                                    </div>

                                }
                                else
                                {
                                    <div class="form-floating mt-1 me-3 checkColor ">
                                        <input class="changeable check form-check-input" value="@region.Regionid" type="checkbox" style="" disabled />
                                        <span>@region.Name</span>
                                    </div>
                                }

                            }
                        </div>
                    </div>
                </fieldset>
                <button type="reset" id="editBtn1" class="btn btn-outline-info float-end me-1 m-1">Edit</button>
                <button type="reset" id="cancelBtn1" class="btn btn-outline-danger float-end me-1 d-none">Cancel</button>
                <button type="submit" id="saveBtn1" class="btn btn-outline-info float-end me-1 d-none">Save</button><br />
            </form>
            <form method="post" asp-controller="Admin" asp-action="AdminProfile">
                <input id="adminId" asp-for="AdminId" hidden />
                <input value="3" asp-for="FormId" hidden />
                <h5>Mailing & Billing Information</h5>
                <fieldset disabled id="fieldset2">

                    <div class="row g-2 m-1">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Address1" type="text" class="form-control" placeholder="">
                                <label for="">Address1</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Address2" type="text" class="form-control" placeholder="">
                                <label for="floatingSelectGrid">Address2</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="City" type="text" class="form-control" placeholder="">
                                <label for="">City</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating phone-div w-100 h-100 ">
                                <select class="form-select border-0" aria-label="Default select example">
                                    @foreach (var items in Model.RegionList)
                                    {
                                        <option value="@items.Regionid" selected>@items.Name</option>
                                    }
                                </select>
                                <label for="">Select A Region</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Zip" type="text" class="form-control" placeholder="">
                                <label for="">Zip</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating phone-div w-100 h-100 ">
                                <input asp-for="BillingPhone" type="tel" class="patientPhone form-control w-100 h-100" placeholder="">
                                <label for="">Phone</label>
                            </div>
                        </div>
                    </div>

                </fieldset>
                <button type="reset" id="editBtn2" class="btn btn-outline-info float-end m-1">Edit</button>
                <button type="reset" id="cancelBtn2" class="btn btn-outline-danger float-end m-1 d-none">Cancel</button>
                <button type="submit" id="saveBtn2" class="btn btn-outline-info float-end m-1 d-none">Save</button><br />
            </form>
        </div>

    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.1.min.js"
        integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous">
</script>
<script>
    $('.admin-tab').removeClass("active");
    $('#profile-tab').addClass("active");
</script>

<script>
    var editBtn1 = document.getElementById("editBtn1");
    var saveBtn1 = document.getElementById("saveBtn1");
    var cancelBtn1 = document.getElementById("cancelBtn1");

    $("#editBtn1").click(function () {
        document.getElementById("fieldset1").disabled = false;
        document.getElementById("userName").disabled = false;
        document.getElementById("status").disabled = false;
        document.getElementById("role").disabled = false;

        editBtn1.classList.add('d-none');
        cancelBtn1.classList.remove('d-none');
        saveBtn1.classList.remove('d-none');

    });

    $("#cancelBtn1").click(function () {
        document.getElementById("fieldset1").disabled = true;
        document.getElementById("userName").disabled = true;
        document.getElementById("status").disabled = true;
        document.getElementById("role").disabled = true;

        editBtn1.classList.remove('d-none');
        cancelBtn1.classList.add('d-none');
        saveBtn1.classList.add('d-none');

    });

    var editBtn2 = document.getElementById("editBtn2");
    var saveBtn2 = document.getElementById("saveBtn2");
    var cancelBtn2 = document.getElementById("cancelBtn2");

    $("#editBtn2").click(function () {
        document.getElementById("fieldset2").disabled = false;

        editBtn2.classList.add('d-none');
        cancelBtn2.classList.remove('d-none');
        saveBtn2.classList.remove('d-none');

    });

    $("#cancelBtn2").click(function () {
        document.getElementById("fieldset2").disabled = true;

        editBtn2.classList.remove('d-none');
        cancelBtn2.classList.add('d-none');
        saveBtn2.classList.add('d-none');

    });
</script>