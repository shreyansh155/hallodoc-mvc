@{
	ViewData["Title"] = "Patient Login";
}

<link rel="stylesheet" href="~/css/common.css" />
<link rel="stylesheet" href="~/css/site.css" />

<div class="background"></div>

<nav class="navbar navbar-expand-lg navbar-light ">
	<div class="toggleimg col-11 d-flex justify-content-center">
		<img class="lightmode" onclick="myFunction()" src="../../images/darkmode.png" alt="">
	</div>
</nav>
<br/>

<div class="container">
	<div class="row align-items-center justify-content-center d-flex">
		<img src="../../images/logo.png" alt="logo" id="logo">
		<div>
		<br/>
		<br/>
		<br/>
		<br/>
		</div>


		<div class="col-12 d-grid justify-content-center mt-3">
			<a asp-controller="Patient" asp-action="PatientSubmitRequest">
			<button class="btn btn-outline-info" id="submitRequest" >Submit A Request</button><br>
			</a>
		</div>
		
		<div class="col-12 d-grid justify-content-center">
			<a asp-controller="Patient"  asp-action="PatientLogin">

			<button class="btn btn-outline-info" id="patientLogin" >Registered Patients</button>
			</a>
		</div>
	</div>
</div>

<script src="~/js/site.js" asp-append-version="true"></script>
