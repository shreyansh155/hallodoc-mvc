
<header>
    <div class="container-fluid d-flex align-items-center justify-content-between">
        <img src="../../images/logo.png" alt="logo_icon" id="logo-icon" />
        <div class="d-flex justify-content-evenly align-items-center">
            <p class="m-2">Welcome <strong> @ViewData["User Name"] </strong></p>
            <a class="btn btn-outline-info mx-2" asp-controller="Admin" asp-action="AdminLogin">
                <span class="h6 p-0 m-0 text-center" style="color: #10bce9;">Logout</span>
            </a>
            <img src="../../images/darkmode.png" alt="" onclick="myFunction()" class="lightmode" id="togglebtn-icon" />
        </div>
    </div>
</header>
<hr class="m-0">

<ul class="nav nav-pills ps-4 shadow" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">

        <a asp-controller="Admin" asp-action="AdminDashboard" class="nav-link px-0 admin-tab" id="dashboard-tab">
            <span class="tabHeader py-2 px-3">Dashboard</span>
        </a>
    </li>
    <li class="nav-item" role="presentation">
        <a asp-controller="Admin" asp-action="ProviderLocation" class="nav-link px-0 admin-tab" id="provider-location-tab">
            <span class="tabHeader py-2 px-3">Provider Location</span>
        </a>
    </li>
    <li class="nav-item" role="presentation">
        <a asp-controller="Admin" asp-action="AdminProfile" class="nav-link px-0 admin-tab" id="profile-tab">
            <span class="tabHeader py-2 px-3">My Profile</span>
        </a>
    </li>
    <li class="nav-item" role="presentation">
        <a asp-controller="Admin" asp-action="Providers" class="nav-link px-0 admin-tab" id="provider-tab">
            <span class="tabHeader py-2 px-3">Providers</span>
        </a>
    </li>
    <li class="nav-item" role="presentation">
        <a asp-controller="Admin" asp-action="Partners" class="nav-link px-0 admin-tab" id="partner-tab">
            <span class="tabHeader py-2 px-3">Partners</span>
        </a>
    </li>
    <li class="nav-item" role="presentation">
        <a asp-controller="Admin" asp-action="Access" class="nav-link px-0 admin-tab" id="access-tab">
            <span class="tabHeader py-2 px-3">Access</span>
        </a>
    </li>
    <li class="nav-item" role="presentation">
        <a asp-controller="Admin" asp-action="Records" class="nav-link px-0 admin-tab" id="record-tab">
            <span class="tabHeader py-2 px-3">Records</span>
        </a>
    </li>
</ul>

<script>

    $(document).ready(function () {
        $('.nav-link').on('click', function () {
            // Remove the active class from all nav links
            $('.nav-link').removeClass('active');

            // Add the active class to the clicked nav link
            $(this).addClass('active');
        });
    });
</script>
<script>
myFunction = () => {
    var element = document.body;
    element.classList.toggle("dark-mode");
    var img = element.querySelector(".lightmode")
    img.src.includes("darkmode") ? img.src = "../../images/lightmode.png" : img.src = "../../images/darkmode.png";
}
</script>