@model PatientResetPassword

@{
    ViewData["Title"] = "PatientForgotPassword";
}
<link rel="stylesheet" href="~/css/patient/PatientForgotpassword.css" asp-append-version="true" />

<div class="background"></div>
<div class="d-flex justify-content-center">
    <div>
        <img class="logo" src="../../images/logo.png" alt="logo">
    </div>
    <div>
        <img class="lightmode" id="togglebtn-icon" onclick="myFunction()" src="../../images/darkmode.png" alt="">
    </div>
</div>
<div class="content py-3">

    <div style="margin-top:150px ;">
        <a class="m-0 text-decoration-none" asp-controller="Patient" asp-action="PatientLogin">
            <span>&#60;Back</span>
        </a>
        <h2>Reset Your password</h2>
        <form method="post">
            <input  asp-for="Email" hidden />

            <input type="password" asp-for="Password" class="form-control my-3 bg-transparent" placeholder="Enter New Password">

            <input type="password" asp-for="ConfirmPassword" class="form-control my-3 bg-transparent" placeholder="Confirm New Password">
            
            <button class="btn btn-primary w-100" type="submit">Reset Password</button>
        </form>
        <div class="w-100 d-flex justify-content-center my-3">
            <a class="m-0 text-decoration-none" asp-action="PatientLogin">Back to Login</a>
        </div>
    </div>
</div>